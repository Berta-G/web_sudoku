
<html>
	<head>
		<title>Sudoku Game</title>
		<link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
	</head>
	<body>
	<h1>Life is too short for playing Sudoku</h1>
		<div id="sudoku">
			<form action="/" method="post">
				<% 3.times do |row| %>
					<div class='row'>
						<% 3.times do |box| %>
							<div class='box'>
								<% 3.times do |cell_row| %>
									<div class='cell_row'>
										<% 3.times do |cell| %>
										 <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
										<% end %>
									</div>
								<% end %>
							</div>
						<% end %>
					</div>
				<% end %>
				<button>Check Numbers</button>
			</form>
		</div>
		<form action="/" method="post">
			<input type="hidden" name="level" value="Easy">
			<button>Easy Sudoku</button>
		</form>
		<form action="/" method="post">
			<input type="hidden" name="level" value="Hard">
			<button>Hard Sudoku</button>
		</form>
		<a href= /solution> <button>Get Solution</button></a>
		<div id="flash">
  		<%= flash[:notice] %>
		</div>
	</body>
</html>